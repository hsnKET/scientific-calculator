<resources>
    <!-- Base application theme. -->
    <style name="Theme.Calculatrice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="ButtonBase">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/_45sdp</item>
        <item name="android:layout_height">@dimen/_25sdp</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="ButtonRed" parent="ButtonBase">
        <item name="android:background">@drawable/bg_btn_red</item>
        <item name="backgroundTint">@color/red</item>
    </style>
    <style name="ButtonSimple" parent="ButtonBase">
        <item name="android:background">@drawable/bg_btn_simple</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>
    <style name="ButtonOperation" parent="ButtonBase">
        <item name="android:background">@drawable/bg_btn_operation</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
    </style>
    <style name="ButtonGreen" parent="ButtonBase">
        <item name="android:background">@drawable/bg_btn_green</item>
        <item name="backgroundTint">@color/greenVariant</item>
    </style>
    <style name="ButtonFunction" parent="ButtonBase">
        <item name="android:background">@drawable/bg_btn_function</item>
        <item name="backgroundTint">@color/colorAccent2</item>
    </style>
</resources>